SHELL=/bin/sh

#### Start of system configuration section. ####

srcdir = @srcdir@
VPATH = @srcdir@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
MAKEINFO = makeinfo
TEXI2DVI = texi2dvi
transform=@program_transform_name@

prefix = @prefix@
exec_prefix = @exec_prefix@

# Directory in which to install scripts.
bindir = @bindir@
mandir = @mandir@/manl

# Directory in which to install library files.
datarootdir = @datadir@
acdatadir = $(datadir)/autoconf

# Directory in which to install documentation info files.
infodir = @infodir@

#### End of system configuration section. ####

CWD:=$(shell pwd)

CC=@CC@
ifdef DEBUG
 CFLAGS=-g @PTHREAD_CFLAG@ @OPENMP_CFLAGS@
else
 CFLAGS=@CFLAGS@ @PTHREAD_CFLAG@ @OPENMP_CFLAGS@
endif

CXX=@CXX@

VERS=standard

NETCDFINC=@NETCDFINC@
NETCDFLIB=@NETCDFLIB@
EMSINC=@EMSHDINC@ -I../../conf
EMSLIB=@EMSHDLIB@
PROJLIB=@PROJLIB@
SEDINC=@SEDIMENTINC@
SEDLIB=@SEDIMENTLIB@
ECOINC=@ECOLOGYINC@
TSINC=@TRACERSTATSINC@
ECOLIB=@ECOLOGYLIB@
TSLIB=@TRACERSTATSLIB@
MLIB= -lm
WAVELIB=@WAVELIB@
WAVEINC=@WAVEINC@
DALIB=@DALIB@
DAINC=@DAINC@
GSLINC=@GSLINC@
GSLLIB=@GSLLIB@
MKLINC=@MKL_INC@
MKLLIB=@MKL_LIB@
MPI_INC=@MPI_INC@
MPI_LIB=@MPI_LIB@
METIS_INC=@METIS_INC@
METIS_LIB=@METIS_LIB@

JIGSAWINC=@JIGSAWINC@
JIGSAWLIB=@JIGSAWLIB@

SWANLIB=@SWANLIB@

LDFLAGS:=$(LDFLAGS) -rdynamic @JIGSAWRPATH@ @SWANRPATH@

# Generate include/svn_rev.h
JUNK:=$(shell ../../conf/gen_svn_rev.sh ../..)

#########################################################################
